{
  "name": "fastify-telemetry-example",
  "version": "1.0.0",
  "description": "Example of using Fastify with Unified Telemetry and Unified Route",
  "main": "dist/fastify-with-telemetry-example.js",
  "scripts": {
    "build": "tsc",
    "build:packages": "cd .. && npm run build",
    "link:packages": "npm link ../dist/packages/api-util-fastify ../dist/packages/unified-route ../dist/packages/unified-telemetry-core ../dist/packages/unified-telemetry-middleware ../dist/packages/unified-telemetry-otel",
    "setup": "npm install --no-save --no-package-lock --legacy-peer-deps",
    "setup:with-link": "npm run build:packages && npm run setup && npm run link:packages",
    "start": "node dist/fastify-with-telemetry-example.js",
    "start:telemetry": "node dist/telemetry-enhanced-app.js",
    "dev": "NODE_PATH=node_modules ts-node fastify-with-telemetry-example.ts",
    "dev:hybrid": "NODE_PATH=node_modules ts-node fastify-hybrid-telemetry.ts",
    "dev:telemetry": "ts-node telemetry-enhanced-app.ts",
    "dev:dual": "OTEL_ENABLE_DUAL_MODE=true OTEL_ENABLE_OTLP_METRICS=true OTEL_DEBUG=true ts-node telemetry-enhanced-app.ts",
    "dev:otlp-only": "OTEL_ENABLE_OTLP_METRICS=true OTEL_ENABLE_PROMETHEUS=false OTEL_DEBUG=true ts-node telemetry-enhanced-app.ts",
    "dev:prometheus-only": "OTEL_ENABLE_OTLP_METRICS=false OTEL_ENABLE_PROMETHEUS=true OTEL_DEBUG=true ts-node telemetry-enhanced-app.ts",
    "dev:no-telemetry": "ENABLE_TELEMETRY=false ts-node fastify-with-telemetry-example.ts",
    "simple": "ts-node simplified-fastify-example.ts",
    "hybrid": "ts-node --transpile-only fastify-hybrid-telemetry.ts",
    "pure-otel": "ts-node --transpile-only fastify-pure-otel.ts",
    "simple:no-telemetry": "ENABLE_TELEMETRY=false ts-node simplified-fastify-example.ts",
    "test:api": "node test-api.js",
    "test:full": "npm run simple & sleep 2 && npm run test:api && pkill -f simplified-fastify-example",
    "telemetry:start": "./start-telemetry.sh",
    "telemetry:infra": "./start-infra.sh",
    "telemetry:app": "./start-app.sh",
    "telemetry:stop": "./stop-telemetry.sh",
    "telemetry:stop:infra": "./stop-infra.sh",
    "telemetry:stop:app": "./stop-app.sh",
    "telemetry:clean": "./clean-telemetry.sh",
    "telemetry:troubleshoot": "./troubleshoot-telemetry.sh",
    "telemetry:logs": "docker-compose -f docker-compose.telemetry.yml logs -f",
    "telemetry:enhanced": "docker-compose -f docker-compose.telemetry.yml up",
    "telemetry:unified": "docker-compose -f docker-compose.telemetry.yml --profile unified up",
    "telemetry:simple": "docker-compose -f docker-compose.telemetry.yml --profile simple up",
    "telemetry:all": "docker-compose -f docker-compose.telemetry.yml --profile unified --profile simple up",
    "test:apps": "./test-apps.sh",
    "test:enhanced": "APP_MODE=enhanced ./test-apps.sh",
    "test:simple": "APP_MODE=simple ./test-apps.sh",
    "test:unified": "./test-unified.sh",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -f Dockerfile.app -t fastify-telemetry-app .",
    "docker:run": "docker run -p 3001:3001 -p 9464:9464 fastify-telemetry-app",
    "docker:run:simple": "docker run -e APP_MODE=simple -p 3001:3001 fastify-telemetry-app"
  },
  "dependencies": {
    "@inh-lib/api-util-fastify": "file:../dist/packages/api-util-fastify",
    "@inh-lib/unified-route": "file:../dist/packages/unified-route",
    "@inh-lib/unified-telemetry-core": "file:../dist/packages/unified-telemetry-core",
    "@inh-lib/unified-telemetry-middleware": "file:../dist/packages/unified-telemetry-middleware",
    "@inh-lib/unified-telemetry-otel": "file:../dist/packages/unified-telemetry-otel",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-node": "^0.50.0",
    "@opentelemetry/auto-instrumentations-node": "^0.45.0",
    "@opentelemetry/sdk-metrics": "^1.23.0",
    "@opentelemetry/sdk-trace-node": "^1.23.0",
    "@opentelemetry/resources": "^1.23.0",
    "@opentelemetry/semantic-conventions": "^1.23.0",
    "@opentelemetry/exporter-prometheus": "^0.50.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.203.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.203.0",
    "fastify": "^4.21.0",
    "fastify-plugin": "^4.5.0",
    "pino": "^8.15.0",
    "tslib": "^2.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
